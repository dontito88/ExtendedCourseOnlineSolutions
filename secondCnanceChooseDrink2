namespace chooseDrink2
{
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

    public class chooseDrink2
    {
        public static void Main()
        {
		var profession = Console.ReadLine();
           	var quantity = int.Parse(Console.ReadLine());
            
            switch(profession)
            {
                case "athlete": Console.WriteLine($"{profession} has to pay {quantity * 0.7}.");
                break;
                case "businessman": Console.WriteLine($"{profession} has to pay {quantity * 1}.");
                break;
                case "businessWoman": Console.WriteLine($"{profession} has to pay {quantity * 1}.");
                break;
                case "softuni student": Console.WriteLine($"{profession} has to pay {quantity * 1.7}.");
                break;
                default: Console.WriteLine($"{profession} has to pay {quantity * 1.2}.");
                break;
            }
        }
    }
}
